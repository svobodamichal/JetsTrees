<?xml version="1.0" encoding="utf-8" ?>
<job fileListSyntax="xrootd" maxFilesPerProcess="&maxNFiles;" filesPerHour="40" simulateSubmission="false">

  <shell>singularity exec -e -B /direct -B /star -B /afs -B /gpfs -B /sdcc/lustre02 /cvmfs/star.sdcc.bnl.gov/containers/rhic_sl7.sif</shell>

  <stdout URL="file:&baseFolder;/submit/&productionId;/job/log/$JOBID.out"/>
  <stderr URL="file:&baseFolder;/submit/&productionId;/job/err/$JOBID.err"/>

  <input URL="filelist:&listOfFiles;" />

  <Generator>
    <Location>./report/</Location>
    <ScriptLocation>./csh/</ScriptLocation>
    <ListLocation>./list/</ListLocation>
  </Generator>

  <command>
    starver &starVersion;
    setenv FASTJET /gpfs01/star/pwg/prozorov/install/fastjet-install
    ln -sf fastjet $FASTJET
    root4star -l -b -q StRoot/macros/&rootMacro;\(\"$FILELIST\",\"&productionId;_$JOBINDEX\"\) &gt;&amp; ${JOBID}.log
    
  </command>

  <output fromScratch="*.root" toURL="&baseFolder;/submit/&productionId;/production/" />
  <output fromScratch="*.log" toURL="&baseFolder;/submit/&productionId;/job/log/" />

  <SandBox installer="ZIP">
    <Package name="LocalLibraries">
      <File>file:./StRoot/</File>
      <File>file:./.sl73_gcc485/</File>
      <File>file:./&badRunListFileName;</File>
    </Package>
  </SandBox>
</job>

